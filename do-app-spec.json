{
  "spec": {
    "name": "rawr-security-platform",
    "region": "nyc",
    "services": [
      {
        "name": "rawr-backend",
        "run_command": "npm start",
        "http_port": 8080,
        "source_dir": "/",
        "dockerfile_path": "Dockerfile",
        "instance_count": 1,
        "instance_size_slug": "basic-xxs",
        "github": {
          "repo": "ItsMehRAWRXD/RawR",
          "branch": "main"
        },
        "envs": [
          {
            "key": "NODE_ENV",
            "value": "production",
            "scope": "RUN_AND_BUILD_TIME"
          },
          {
            "key": "PORT",
            "value": "8080",
            "scope": "RUN_AND_BUILD_TIME"
          },
          {
            "key": "NPM_CONFIG_PRODUCTION",
            "value": "false",
            "scope": "BUILD_TIME"
          }
        ]
      }
    ],
    "ingress": {
      "rules": [
        {
          "match": {
            "path": {
              "prefix": "/"
            }
          },
          "component": {
            "name": "rawr-backend"
          }
        }
      ]
    }
  }
}
