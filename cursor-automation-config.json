{
  "cursorAutomation": {
    "enabled": true,
    "autoClickDelay": 1000,
    "maxRetries": 3,
    "retryDelay": 2000,
    "checkInterval": 5000,
    "enableLogging": true,
    "enableNotifications": true,
    
    "uiSettings": {
      "buttonText": "Keep all",
      "dialogTitle": "Source updated",
      "timeout": 10000,
      "confidence": 0.8
    },
    
    "integration": {
      "enableHTTPBot": true,
      "enableIRCBot": false,
      "enableDiscordBot": false,
      "webhookUrl": null,
      "ircChannel": "#cursor-automation"
    },
    
    "platforms": {
      "win32": {
        "cursorPaths": [
          "C:\\Users\\%USERNAME%\\AppData\\Local\\Programs\\cursor\\Cursor.exe",
          "C:\\Program Files\\Cursor\\Cursor.exe",
          "C:\\Program Files (x86)\\Cursor\\Cursor.exe"
        ],
        "automationMethod": "powershell"
      },
      "darwin": {
        "cursorPaths": [
          "/Applications/Cursor.app/Contents/MacOS/Cursor",
          "/Applications/Cursor.app"
        ],
        "automationMethod": "applescript"
      },
      "linux": {
        "cursorPaths": [
          "/usr/bin/cursor",
          "/usr/local/bin/cursor",
          "/opt/cursor/cursor",
          "/snap/bin/cursor"
        ],
        "automationMethod": "xdotool"
      }
    }
  }
}
